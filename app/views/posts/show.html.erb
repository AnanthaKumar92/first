<h1>Posts of <%= @post.name %> </h1>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>
<h3>Comments of <%= @post.title %> posted by <%= @post.name %></h3>
<%= render @post.comments %>
<h3>Comment here </h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
  <%= f.label :commenter %>
  <%= f.text_field :commenter %>
 </p>
<p>
  <%= f.label :body %>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
<%= link_to "Back", posts_path %>
| <%= link_to 'Edit', edit_post_path(@post) %>